@model List<Tavisca.Assignment.MVC.Store.TaskItem>


@if (Model != null && Model.Any() == true)
{

    <a href="#add-todo">
        <button class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored mdl-shadow--4dp mdl-color--accent" id="add">
            <i class="material-icons" role="presentation">add</i>
            <span class="visuallyhidden">Add</span>
        </button>
    </a>

    <div class="demo-grid-1 mdl-grid">
        @foreach (var task in @Model)
        {
            <div class="mdl-cell mdl-cell--3-col">
                <div class="mdl-card mdl-shadow--2dp">
                    <div class="mdl-card__title mdl-card--expand">
                        <h2 class="mdl-card__title-text">@task.Title</h2>
                    </div>
                    <div class="mdl-card__supporting-text">
                        @task.Description
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <a class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">
                            Edit
                        </a>
                        <a class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" href="/Home/Delete/@task.Id">
                            Delete
                        </a>
                    </div>
                   
                </div>
            </div>
        }


    </div>
}
else
{
    <div class="demo-grid-1 mdl-grid">
        <div class="mdl-cell mdl-cell--4-col"></div>
        <div class="mdl-cell mdl-cell--4-col">
            <div class="mdl-card mdl-shadow--2dp demo-card-wide">
                <div class="mdl-card__title">
                    <h2 class="mdl-card__title-text">Welcome</h2>
                </div>
                <div class="mdl-card__supporting-text">
                    No news is good news!!! You have no Todos. Cheers!
                </div>
                <div class="mdl-card__actions mdl-card--border">

                    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="#add-todo">
                        Get Started. Create a Todo.
                    </a>
                </div>

            </div>
        </div>
        <div class="mdl-cell mdl-cell--4-col"></div>
    </div>

}



@section AfterMain{
    @{
        Html.RenderPartial("Add");
    }
}
